{
	"name": "magic-icons",
	"version": "0.0.2",
	"description": "Magic Icons - A comprehensive React icon library monorepo",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"packageManager": "bun@1.2.22",
	"scripts": {
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter=web",
		"build:icons": "turbo run build:icons --filter=magic-icons",
		"build:lib": "turbo run build --filter=magic-icons",
		"build:web": "turbo run build --filter=web",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"start:web": "turbo run start --filter=web",
		"icons:analyze": "node scripts/analyze-icon-variants.js",
		"icons:sync-stroke": "node scripts/sync-stroke-variants.js && bun run build:icons",
		"icons:fix-stroke": "node scripts/fix-stroke-widths.js && bun run build:icons"
	},
	"author": "Jaya Raj Srivathsav Adari",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/srivathsav-max/magic-icons.git"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.2",
		"@types/node": "^24.9.2",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.7",
		"@vitejs/plugin-react": "^5.0.4",
		"globals": "^16.4.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tsup": "^8.5.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "~5.9.3",
		"vite": "^7.1.7"
	},
	"dependencies": {
		"@base-ui-components/react": "^1.0.0-beta.4",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slider": "^1.3.6",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-tabs": "^1.1.13",
		"@tailwindcss/vite": "^4.1.16",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"next-themes": "^0.4.6",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.16",
		"turbo": "^2.5.8"
	}
}
