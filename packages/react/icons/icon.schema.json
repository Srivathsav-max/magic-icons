{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Icon Metadata",
	"description": "Metadata for individual SVG icons in the Magic Icons library",
	"type": "object",
	"required": ["tags", "categories", "variant"],
	"properties": {
		"$schema": {
			"type": "string",
			"description": "Reference to this schema file"
		},
		"variant": {
			"type": "string",
			"description": "The style variant of this icon",
			"enum": ["outline", "bulk", "broken", "light", "two-tone"]
		},
		"contributors": {
			"type": "array",
			"description": "List of contributors who created or modified this icon",
			"items": {
				"type": "string"
			},
			"default": []
		},
		"tags": {
			"type": "array",
			"description": "Keywords and tags for searching and categorizing the icon",
			"items": {
				"type": "string"
			},
			"minItems": 1
		},
		"categories": {
			"type": "array",
			"description": "Primary categories this icon belongs to",
			"items": {
				"type": "string",
				"enum": [
					"user",
					"communication",
					"navigation",
					"media",
					"file",
					"commerce",
					"action",
					"security",
					"ui",
					"data",
					"time",
					"location",
					"status",
					"work",
					"misc"
				]
			},
			"minItems": 1
		},
		"aliases": {
			"type": "array",
			"description": "Alternative names for this icon",
			"items": {
				"type": "string"
			},
			"default": []
		},
		"deprecated": {
			"type": "boolean",
			"description": "Whether this icon is deprecated",
			"default": false
		},
		"deprecatedReason": {
			"type": "string",
			"description": "Reason for deprecation if deprecated is true"
		},
		"replacedBy": {
			"type": "string",
			"description": "Icon name that replaces this one if deprecated"
		}
	}
}
